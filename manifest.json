{
  "manifest_version": 3,
  "name": "Parolefai",
  "version": "0.1",
  "description": "Le parole le fa",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Mi clicchi pure signore, non indugi!"
  },
  "icons": {
    "16": "data/logo.png",
    "48": "data/logo.png",
    "128": "data/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}